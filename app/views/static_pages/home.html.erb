<div class="center row-fluid">
  <% if current_user.nil? %>
    <div class="center hero-unit">
      <h1>amblr</h1>

      <h2>Always know who's available</h2>

  <% else %>
    <div class="span3">
      <h2>People</h2>
      <%= render 'shared/users' %>
    </div>
    <div class="span6">
      <h2>My Availability</h2>
      <%= render 'shared/availability' %>
    </div>
    <div class="span3">
      <h2>Settings</h2>
      <%= render 'shared/settings' %>
    </div>
  <% end %>
</div>
